#!/usr/bin/env zsh
# Wrapper to run wtnew as a CLI command
# Sources the sibling ../wtnew function file and invokes wtnew

script_dir="${0:A:h}"
script_root="${script_dir}/.."

if [[ -f "${script_root}/wtnew" ]]; then
  source "${script_root}/wtnew"
else
  echo "Error: wtnew not found at ${script_root}/wtnew" >&2
  exit 2
fi

wtnew "$@"
