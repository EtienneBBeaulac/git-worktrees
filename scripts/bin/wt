#!/usr/bin/env zsh
# Wrapper to run wt as a CLI command
# Sources the sibling ../wt function file and invokes wt

script_dir="${0:A:h}"
script_root="${script_dir}/.."

if [[ -f "${script_root}/wt" ]]; then
  source "${script_root}/wt"
else
  echo "Error: wt not found at ${script_root}/wt" >&2
  exit 2
fi

wt "$@"
