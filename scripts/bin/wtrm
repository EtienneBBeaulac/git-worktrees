#!/usr/bin/env zsh
# Wrapper to run wtrm as a CLI when installed to PATH.

script_dir="${0:A:h}"
script_root="${script_dir}/.."

if [[ -f "${script_root}/wtrm" ]]; then
  source "${script_root}/wtrm"
elif [[ -f "${script_root}/../wtrm" ]]; then
  source "${script_root}/../wtrm"
else
  echo "wtrm function file not found. Expected at ${script_root}/wtrm" >&2
  exit 2
fi

wtrm "$@"
