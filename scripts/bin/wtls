#!/usr/bin/env zsh
# Wrapper to run wtls as a CLI command
# Sources the sibling ../wtls function file and invokes wtls

script_dir="${0:A:h}"
script_root="${script_dir}/.."

if [[ -f "${script_root}/wtls" ]]; then
  source "${script_root}/wtls"
else
  echo "Error: wtls not found at ${script_root}/wtls" >&2
  exit 2
fi

wtls "$@"
